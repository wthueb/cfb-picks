{
  "name": "cfb-picks",
  "private": true,
  "engines": {
    "node": ">=22.14.0",
    "pnpm": ">=9.6.0"
  },
  "packageManager": "pnpm@10.11.1",
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "db:generate": "turbo run -F @cfb-picks/db generate",
    "db:migrate": "turbo -F @cfb-picks/db migrate",
    "db:push": "turbo -F @cfb-picks/db push",
    "db:studio": "turbo -F @cfb-picks/db studio",
    "dev": "turbo watch dev --continue",
    "dev:web": "turbo watch dev -F @cfb-picks/web...",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add"
  },
  "devDependencies": {
    "@cfb-picks/prettier-config": "workspace:*",
    "prettier": "catalog:",
    "turbo": "^2.5.6",
    "typescript": "catalog:"
  },
  "prettier": "@cfb-picks/prettier-config",
  "pnpm": {
    "overrides": {
      "react": "catalog:react19",
      "react-dom": "catalog:react19"
    }
  }
}
